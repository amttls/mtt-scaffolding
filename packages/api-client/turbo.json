{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "codegen": {
      "dependsOn": ["api#openapi:generate"],
      "inputs": ["orval.config.ts"],
      "outputs": ["src/generated/**"]
    },
    "build": {
      "dependsOn": ["codegen"],
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": ["dist/**"]
    }
  }
}
